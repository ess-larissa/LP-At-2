def calcular_area(a, b, c):
    # Verifica se os valores formam um triângulo
    if a < b + c and b < a + c and c < a + b:
        # Fórmula de Heron para calcular a área do triângulo
        s = (a + b + c) / 2
        area = (s * (s - a) * (s - b) * (s - c)) ** 0.5
        return area
    else:
        return None

# Entrada dos valores
a = int(input("Digite o valor de a: "))
b = int(input("Digite o valor de b: "))
c = int(input("Digite o valor de c: "))

# Verifica se forma um triângulo e calcula a área
area_tri = calcular_area(a, b, c)

if area_tri:
    print(f"Os valores {a}, {b} e {c} formam um triângulo e a área é {area_tri:.2f}.")
else:
    print(f"Os valores {a}, {b} e {c} não formam um triângulo.")
